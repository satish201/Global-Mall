

<div class="main-mid">
  <div class="content">
    <ul class="producticons">
        
      <%@products.each do |product|%>
      
                    	<li><a href="/products/<%= product.id %>">
                            <% if product.image.url%>
                                <%=  image_tag product.image.url(:thumb)%>
                            <%else%>
                                <img src="/images/icons/taxas.png" />  
                            <%end%>
                          </a><br />
                        	<a href="/products/<%= product.id %>" ><%= product.name %></a>
                        </li>
       <%end%>
                        
    </ul>

